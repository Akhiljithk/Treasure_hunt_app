<meta http-equiv="refresh" content="30">
<div class="header container mt-4">
    <div class="row justify-content-center text-center">
        <h3 class="col-12">WELCOME TO ISTE ADMIN PANEL</h3>
        <h1 class="col-12 interitus-text mt-3">Vista Voyage</h1>
        <a href="/" class="col-12 caption" style="color: #ff4655; cursor: pointer;">Go to play zone</a>
    </div>
</div>

<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 p-3">
            <div class="row justify-content-center px-3">
                {{#each TeamData}}
            
                    <a data-bs-toggle="collapse" href="#{{this.teamId}}" role="button" aria-expanded="false"
                    aria-controls="collapseExample" class="btn btn-danger m-2" style="text-transform: uppercase;">{{this.teamId}}</a>
          
                <div class="collapse" id="{{this.teamId}}" style="overflow-y: scroll;">
                    <div class="m-0" style="max-height: 200px;">
                        {{#if this.atTreasure}}
                        <p class="m-1 p-0" style="color: #1ef10b;"><i class="fa fa-gem"></i> They got the treasure at {{this.treasureTime}}</p>
                        {{else}}
                        <p class="m-1 p-0" style="color: #f1e20b;"><i class="fa fa-running"></i> They are trying clue {{this.currentClue}} now</p>
                        {{/if}}
                        <ul class="list-group">
                        {{#each this.passedAnswers}}
                        <li class="list-group-item" style="background: #121125;">
                        <p class="mb-0 p-0" style="color: #ff4655; "><i class="fa fa-check-circle"></i> Cracked question {{this.clueNo}} at <span class="ml-2">{{this.time}}</span></p> 
                        </li>
                        {{/each}}
                        </ul>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>