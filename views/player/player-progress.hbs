<div class="header container mt-4">
    <div class="row justify-content-center text-center">
        <img class="col-12 iste-logo img-fluid d-block" src="images/ISTE logo White.png" alt="ISTE">
        <h3 class="col-12">INDIAN SOCIETY FOR <br>
            TECHNICAL EDUCATION</h3>
        <h1 class="col-12 interitus-text mt-3">Vista Voyage</h1>
        <a href="/" class="col-12 caption" style="color: #ff4655; cursor: pointer;"><i class="fa fa-angle-left"></i> Back</a>
    </div>
</div>

<div class="container mt-4 mb-4">
    <div class="d-flex flex-column justify-content-center align-items-center p-2">
        {{#if error}}
        <div class="col-12 alert alert-danger alert-dismissible fade show" style="width: 334px;" role="alert">
            <strong>{{error}}</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
        <div class="col-12 playerInput p-3" style="height: 317px;">
            <div class="row justify-content-center">
                {{#if this.persentage}}
                <p class="mt-1 mb-3">{{this.teamId}}'s current question: {{this.currentClue}} <br> distance to the treasure</p>
                    <div class="col-12 mt-0">
                        <div class="progress">
                            <div class="progress-bar bg-danger" role="progressbar" style="width:{{this.persentage}}%"
                                aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <i class="fas fa-gem" style="color: #ff4655; position: relative; top: -42px; left:283px;"></i>
                    </div>
                {{/if}}
                <form class="row justify-content-center" action="/player-progress" method="POST">
                    <label class="mt-0 mb-1 p-0" for=""><i class="fa fa-id-badge"></i> TEAM ID</label>
                    <input type="text" name="teamId" class="playerInputFeild" id="id" placeholder="{{this.teamId}}" required>
                    <button type="submit" id="realBtn" onclick="enableLoading()" class="iste-btn mt-4 mb-2">
                        <span class="iste-btn__inner">
                            <span class="iste-btn__slide"></span>
                            <span class="iste-btn__content">Get your progress</span>
                        </span>
                    </button>
                </form>
                <p class="text-center pt-1" style="font-size: 10px;"><span><a style="color: #ff4655;"
                            href="https://www.instagram.com/istegecb/">Follow</a></span> us for more interesting events
                </p>
            </div>
        </div>
    </div>
</div>
